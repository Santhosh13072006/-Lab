#include <stdio.h>
#include <stdlib.h>
typedef struct node
{
    int data;
    struct node *next;
    struct node *prev;
}a;
a* create(int data1)
{
    a* newnode=(a*)malloc(sizeof(a));
    newnode->data=data1;
    newnode->next=NULL;
    newnode->prev=NULL;
    return newnode;
}
 void insertAtBegin(a** head,int data1)
{
    a* newnode=create(data1);
    if(*head==NULL)
    {
      *head=newnode;
       newnode->prev=NULL;
    }
    else
    {
        newnode->next=*head;
        a* temp=*head;
        temp->prev=newnode;
        *head=newnode;
    }
}
 void insertAtEnd(a** head,int data1)
{
    a* newnode=create(data1);
    if(*head==NULL)
    {
      *head=newnode;
       newnode->prev=NULL;
    }
    else
    {
        a* temp=*head;
        while(temp->next!=NULL)
        {
            temp=temp->next;
        }
        temp->next=newnode;
        newnode->prev=temp;
        
    }
}
void insertspecific(a** head,int data1,int num,int nodenum)
{      if(nodenum==0)
        {
         a* newnode=create(data1);
         a* temp=*head;
         temp->prev=newnode;
         newnode->next=temp;
         *head=newnode;
         
        }
        else if(nodenum==num+1)
        {
        a* newnode=create(data1);
        a* temp=*head;
        while(temp->next!=NULL)
        {
            temp=temp->next;
        }
         temp->next=newnode;
         newnode->prev=temp;
        }
        else{

        int c=0;
        a* temp=*head;
        while(temp!=NULL)
        {
            temp=temp->next;
            c=c+1;
            if(c==nodenum-1)
            {
                break;
            }
        }
        a* newnode=create(data1);
        a* temp2=temp->next;
        temp->next=newnode;
        newnode->next=temp2;
        temp2->prev=newnode;
        newnode->prev=temp;
        }
   
}
void insertAtMiddle(a** head,int data1,int num)
{
        int k=num/2-1,c=0;
        a* temp=*head;
        while(temp!=NULL)
        {
            temp=temp->next;
            c=c+1;
            if(c==k)
            {
                break;
            }
        }
        a* newnode=create(data1);
        a* temp2=temp->next;
        temp->next=newnode;
        newnode->next=temp2;
        temp2->prev=newnode;
        newnode->prev=temp;
   
}
void display(a** head)
{ 
    a* temp1=*head;
    
    while(temp1->next!=NULL)
    {
        printf("%d<->",temp1->data);
        temp1=temp1->next;
    }
    printf("%d ",temp1->data);
    printf("\n");

    
}

int main()
{
    int n;
    a* head=NULL;
    printf("enter no.of elements in your array:");
    scanf("%d",&n);
    int b[n];
    for(int i=0;i<n;i++)
    {
        scanf("%d",&b[i]);
    }
    for(int i=0;i<n-2;i++)
    {
        if (i%2==0)
           insertAtEnd(&head,b[i]);
        else
           insertAtBegin(&head,b[i]);
    }
    insertAtMiddle(&head,b[n-2],n-2);
    insertspecific(&head,b[n-1],n-1,0);
    
    display(&head);
}
